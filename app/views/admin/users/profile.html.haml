.content
  / User profile
  .row
    .col-lg-3
      / User thumbnail
      .thumbnail
        .thumb.thumb-rounded.thumb-slide
          = image_tag(@user.avatar.url(:medium), alt: 'user profile')
        .caption.text-center
          %h6.text-semibold.no-margin
            #{@user.first_name} #{@user.last_name}
            %small.display-block
              - @memberships.each do |membership|
                #{membership.role} в #{membership.department.name}
                %br
      / /user thumbnail
      / Navigation
      .panel.panel-flat
        .panel-heading
          %h6.panel-title Меню
        .list-group.no-border.no-padding-top
          = link_to user_profile_path(@user.id), class: "list-group-item" do
            %i.icon-user
            Мой профиль
          = link_to user_departments_path(@user.id), class: "list-group-item" do
            %i.icon-office
            Отделы
          %a.list-group-item{:href => "#"}
            %i.icon-envelop3
            Сообщения
            %span.badge.bg-info.pull-right в разработке
          %a.list-group-item{:href => "#"}
            %i.icon-task
            Задачи
            %span.badge.bg-info.pull-right в разработке
          .list-group-divider
          %a.list-group-item{:href => "#"}
            %i.icon-calendar3
            События
            %span.badge.bg-info.pull-right в разработке
          %a.list-group-item{:href => "#"}
            %i.icon-cog3
            Настройки аккаунта
      / /navigation
    .col-lg-9
      .panel.panel-flat
        .panel-body
          .row
            .col-md-12
              .table-responsive
                %table.table
                  %thead
                    %tr.alpha-grey
                      %th.text-uppercase{ 'colspan' => '2'}
                        Контактные данные
                  %tbody
                    %tr
                      %td.col-md-3 Электронная почта
                      %td.col-md-9 #{@user.email}
                    %tr
                      %td.col-md-3 Телефон
                      %td.col-md-9 #{@user.phone}
                    %tr
                      %td.col-md-3 Skype
                      %td.col-md-9 #{@user.skype}
  / /user profile
