.row
  .col-md-6
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      %fieldset
        %legend.text-bold
          Изменение пароля для: #{@user.first_name} #{@user.last_name}
          %br
          Логин: #{@user.email} 
        .form-group
          = f.label :password, 'Новый пароль'
          .input-group
            %span.input-group-addon.bg-green-600
              .icon-key
            = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Не меньше 6 знаков...'
            - if @minimum_password_length
              %br/
              %em
                = @minimum_password_length
                знаков минимум
        .form-group
          = f.label :password_confirmation, 'Подтверждение пароля'
          .input-group
            %span.input-group-addon.bg-green-600
              .icon-key
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Введите пароль повторно'
        .form-group
          = f.label :current_password, 'Введите текущий пароль что бы применить новый пароль'
          .input-group
            %span.input-group-addon.bg-green-600
              .icon-unlocked2
            = f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Текущий пароль'
        .form-group
          .text-left
            = f.submit 'Изменить пароль', class: 'btn btn-success'
