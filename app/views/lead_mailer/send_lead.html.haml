    %h2
      Новый лид
    %div
      %span.text-bold Имя: 
      = @lead.name
    %div
      %span.text-bold Телефон: 
      = @lead.phone
    - if @lead.email.present?
      %div
        %span.text-bold Электронная почта:
        = @lead.email
    - if @lead.location.present?
      %div
        %span.text-bold Где хочет строить: 
        = @lead.location
    - if @lead.question.present?
      %div
        %span.text-bold Вопрос: 
        = @lead.question
