  / Grid
  .row
    .col-md-6
      / Horizontal form
      .panel.panel-flat
        .panel-heading
          %h5.panel-title Horizontal form
          .heading-elements
            %ul.icons-list
              %li
                %a{"data-action" => "collapse"}
              %li
                %a{"data-action" => "close"}
        .panel-body
          %form.form-horizontal{:action => "#"}
            .form-group
              %label.control-label.col-lg-2 Text input
              .col-lg-10
                %input.form-control{:type => "text"}
            .form-group
              %label.control-label.col-lg-2 Password
              .col-lg-10
                %input.form-control{:type => "password"}
            .form-group
              %label.control-label.col-lg-2 Select
              .col-lg-10
                %select.form-control{:name => "select"}
                  %option{:value => "opt1"} Basic select
                  %option{:value => "opt2"} Option 2
                  %option{:value => "opt3"} Option 3
                  %option{:value => "opt4"} Option 4
                  %option{:value => "opt5"} Option 5
                  %option{:value => "opt6"} Option 6
                  %option{:value => "opt7"} Option 7
                  %option{:value => "opt8"} Option 8
            .form-group
              %label.control-label.col-lg-2 Textarea
              .col-lg-10
                %textarea.form-control{:cols => "5", :placeholder => "Default textarea", :rows => "5"}
            .text-right
              %button.btn.btn-primary{:type => "submit"}
                Submit form
                %i.icon-arrow-right14.position-right
      / /horizotal form
    .col-md-6
      / Vertical form
      .panel.panel-flat
        .panel-heading
          %h5.panel-title Vertical form
          .heading-elements
            %ul.icons-list
              %li
                %a{"data-action" => "collapse"}
              %li
                %a{"data-action" => "close"}
        .panel-body
          %form{:action => "#"}
            .form-group
              %label Text input
              %input.form-control{:type => "text"}
            .form-group
              %label Select
              %select.form-control{:name => "select"}
                %option{:value => "opt1"} Basic select
                %option{:value => "opt2"} Option 2
                %option{:value => "opt3"} Option 3
                %option{:value => "opt4"} Option 4
                %option{:value => "opt5"} Option 5
                %option{:value => "opt6"} Option 6
                %option{:value => "opt7"} Option 7
                %option{:value => "opt8"} Option 8
            .form-group
              %label Textarea
              %textarea.form-control{:cols => "4", :placeholder => "Default textarea", :rows => "4"}
            .text-right
              %button.btn.btn-primary{:type => "submit"}
                Submit form
                %i.icon-arrow-right14.position-right
